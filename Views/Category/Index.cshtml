@model IEnumerable<Category>;
@{
    ViewData["Title"] = "Index";
}

<div class="container">
  <div class="row mb-4">
    <div class="col-10">
        <h3 class="mb-4">List of Categories</h3>
    </div>
    <div class="col">
            <a type="button" class="btn btn-primary" asp-action="Create" asp-controller="Category">
                <i class="bi bi-plus mr-2"></i>
                Create Category
            </a>
    </div>
  </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Order Date</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>@item.CreatedDateTime.Date</td>
                <td class="row gap-2">
                    <a type="button" class="col-4 btn btn-primary" asp-route-id="@item.Id" asp-action="Edit" asp-controller="Category"><i class="bi bi-pen"></i></a>
                    <a class="btn btn-primary col-4" asp-action="Delete" asp-route-id="@item.Id" asp-controller="Category"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
        }
    </tbody>

</table>

